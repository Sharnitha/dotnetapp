<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Deploy Application</title>
    <script>
        async function triggerDeploy() {
            const branch = document.getElementById("branchSelect").value;

            const response = await fetch('/api/deploy/trigger-deploy', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ branch: branch }), // Send selected branch to the backend
            });

            if (response.ok) {
                alert("Deployment triggered successfully!");
            } else {
                alert("Failed to trigger deployment.");
            }
        }
    </script>
</head>
<body>
    <h1>Deploy .NET MVC Application</h1>

    <label for="branchSelect">Select Branch:</label>
    <select id="branchSelect">
        <option value="main">Main</option>
        <option value="staging">Staging</option>
    </select>

    <button onclick="triggerDeploy()">Deploy</button>
</body>
</html>
